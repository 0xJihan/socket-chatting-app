<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppMainTheme" parent="android:Theme.Material.Light.NoActionBar" >

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/black</item>

    </style>


    <style name="Theme.StartingSplashScreen" parent="Theme.SplashScreen" >

        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.AppMainTheme</item>


        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
<!--        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/animated_logo</item>-->

    </style>




</resources>